<h1 class="sans--large pt3 mt2 mb2 mb4--md fw--600 ws--pre-line color--blue">{{ page.title }}</h1>
<div class="grid-container contained">
    <div class="row align--center">
        <div class="col c9--lg">
  {{ page.content }}
</div>
</div>
</div>

</div>