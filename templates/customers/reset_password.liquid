<!-- /templates/customers/reset_password.liquid -->
<div class="small-width m--auto login p4 pt10--md clearfix mt8 mb8 pb3 mt10--md mb10--md">

<div class="grid">
    <div class="grid__item large--one-third push--large--one-third text-center">
  
      <div class="form-vertical">
        {% form 'reset_customer_password' %}
        <h1 class="tc sans--large fw--600 mb2 mb3--md ws--pre-line m--auto">{{ 'customer.reset_password.title' | t }}</h1>
  
          <p class="mb2">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
  
          {{ form.errors | default_errors }}
          <div class="mb1">

          <label for="ResetPassword" class="form-label hidden-label">{{ 'customer.reset_password.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="ResetPassword" class="form-input input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}">
          </div>
          <div class="mb1">
          <label for="PasswordConfirmation" class="form-label hidden-label">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="form-input input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
          </div>
          <div class="text-center mt2">
            <input type="submit" class="btn btn--full button button--primary rounded" value="{{ 'customer.reset_password.submit' | t }}">
          </div>
  
        {% endform %}
      </div>
  
    </div>
  </div>

</div>