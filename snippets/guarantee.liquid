<style>
    .spanGuarantee {
    float: right;
    font-size: 58px;
    position: absolute;
    top: 24px;
    font-weight: 200;
    right: 20px;
    cursor: pointer;
    }

    #detailsModalBtnGuarantee:hover {
        cursor: pointer;
    }
</style>

<script>

// Get the modal
var modalGuarantee = document.getElementById("detailsModalGuarantee");

// Get the button that opens the modal
var btnGuarantee = document.getElementById("detailsModalBtnGuarantee");

// Get the <span> element that closes the modal
var spanGuarantee = document.getElementsByClassName("spanGuarantee")[0];

// When the user clicks on the button, open the modal
btnGuarantee.onclick = function() {
  modalGuarantee.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
spanGuarantee.onclick = function() {
  modalGuarantee.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modalGuarantee) {
    modalGuarantee.style.display = "none";
  }
}

  
  
    </script>
  